# MCTX Docker Environment Configuration
# Copy this file to .env and customize as needed

# General settings
LOG_LEVEL=INFO
DEBUG=false

# API settings
API_PORT=8000
MAX_BATCH_SIZE=64
MAX_NUM_SIMULATIONS=500

# Frontend settings
FRONTEND_PORT=3000

# GPU settings
ENABLE_T4_OPTIMIZATIONS=1
MCTX_NUM_WORKERS=4
MCTX_MAX_BATCH_SIZE=32
MCTX_DEFAULT_SIMULATIONS=128
MCTX_TIMEOUT_SECONDS=60
MCTX_GPU_MEMORY_FRACTION=0.9
MCTX_USE_MIXED_PRECISION=true
MCTX_ENABLE_DISTRIBUTED=false
MCTX_NUM_DEVICES=1

# Redis settings
REDIS_PORT=6379
REDIS_CACHE_TTL=3600
MCTX_ENABLE_REDIS_CACHE=true

# Monitoring settings
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_PASSWORD=admin
MCTX_ENABLE_PROMETHEUS=true

# Visualization settings
VIS_PORT=8050
VIS_ALT_PORT=8051
VIS_BLUE_PORT=8051
VIS_GREEN_PORT=8052

# Blue-Green deployment settings
ACTIVE_DEPLOYMENT=blue
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# SAP HANA settings (optional)
# HANA_HOST=your-hana-host
# HANA_PORT=30015
# HANA_USER=your-hana-user
# HANA_PASSWORD=your-hana-password