# MCTX API Configuration
MCTX_NUM_WORKERS=4
MCTX_MAX_BATCH_SIZE=32
MCTX_DEFAULT_SIMULATIONS=128
MCTX_TIMEOUT_SECONDS=60
MCTX_GPU_MEMORY_FRACTION=0.9
MCTX_USE_MIXED_PRECISION=true
MCTX_ENABLE_DISTRIBUTED=false
MCTX_NUM_DEVICES=1

# Redis Configuration
MCTX_ENABLE_REDIS_CACHE=true
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_CACHE_TTL=3600

# Monitoring Configuration
MCTX_ENABLE_PROMETHEUS=true

# Security Configuration
MCTX_API_KEY_REQUIRED=true
# Comma-separated list of valid API keys (change these\!)
MCTX_API_KEYS=key1,key2,key3

# SAP HANA Configuration (optional)
HANA_HOST=your_hana_host.example.com
HANA_PORT=443
HANA_USER=your_username
HANA_PASSWORD=your_password
EOF < /dev/null